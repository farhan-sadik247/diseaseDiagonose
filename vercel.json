{
  "version": 2,
  "builds": [
    {
      "src": "disease_diagnosis_backend/vercel_wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "disease-diagnosis-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "disease_diagnosis_backend/vercel_wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "disease-diagnosis-frontend/dist/index.html"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "disease_diagnosis_backend.settings_vercel",
    "PYTHONPATH": "disease_diagnosis_backend"
  }
}
